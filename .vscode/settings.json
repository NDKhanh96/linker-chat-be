{
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.codeActionsOnSave": {
        "source.organizeImports":"always"
    },
    "typescript.preferences.preferTypeOnlyAutoImports": true,
    "cSpell.words": [
        "authuser",
        "dotenv",
        "otpauth",
        "pids",
        "TOTP"
    ],
    "cSpell.ignorePaths": [
        "yarn.lock",
        "package-lock.json",
        "node_modules/**",
        ".gitignore",
        ".env",
        ".env.test.local",
    ]
}