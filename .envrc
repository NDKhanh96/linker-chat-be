#!/usr/bin/env bash
# Automatically activate the Nix flake development shell when entering this directory
# Requires direnv to be installed and configured

if command -v nix &> /dev/null && nix flake check --no-build 2>/dev/null; then
    use flake
else
    echo "Warning: Nix flake not available or invalid. Please ensure Nix with flakes is installed."
fi
